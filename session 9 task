import datetime

def write_entry():
    print("1. Write new entry")
    entry = input("Enter your journal entry: ")

   # Add timestamp
    timestamp = datetime.datetime.now().strftime("%Y-%m-%d %H:%M")
   # Save to journal.txt
    with open("journal.txt", "a") as file:
        file.write(f"{timestamp}: {entry}\n")
    print("Entry saved successfully!\n")

  

def read_entries():
    print("2. Read all entries")

    # Open journal.txt
    try:
      with open('journal.txt', 'r') as file:
        data = file.read()
        print(data)
    except FileNotFoundError:
     print("File not found, but no resource leak!")
    

    # Display all entries

def search_by_date():
  # Get date from user
    print("3. Search by date")
    date_str = input("Enter the date (YYYY-MM-DD): ")
    try:
        search_date = datetime.datetime.strptime(date_str, "%Y-%m-%d")
        found = False
        with open("journal.txt", "r") as file:
            print("\nEntries on", date_str, ":")
            for line in file:
                if line.startswith(search_date.strftime("%Y-%m-%d")):
                    print(line.strip())
                    found = True
        if not found:
            print("No entries found for this date.")
    except (FileNotFoundError, ValueError):
        print("No entries found or invalid date format.")
def main():
   while True:
   # Display menu
    print("=== Personal Journal ===")
    print("1. Write new entry")
    print("2. Read all entries")
    print("3. Search by date")
    print("4. Exit")
    choice = input("Choice: ")
    # Handle user choices
    if choice == '1':
        write_entry()
    elif choice == '2':
        read_entries()
    elif choice == '3':
        search_by_date()
    elif choice == '4':
        print("Goodbye!")
        break

     # Loop until exit                              
    else:
        print("Invalid choice, please try again.\n")

                                

if __name__ == "__main__":
    main()
